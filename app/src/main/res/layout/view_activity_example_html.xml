<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:real="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hardsoftstudio.real.textview.views.RealTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#60000000"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        real:minTextSize="5sp"
        android:text="Because it's not a webview you can set a transparent background" />

    <com.hardsoftstudio.real.textview.views.RealTextView
        android:id="@+id/w_rtv_html"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>