<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:real="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="org.hardsoftstudio.real.example.MainActivity">

    <com.hardsoftstudio.real.textview.views.RealButton
        android:id="@+id/w_rbut_realexample"
        android:text="Real Examples"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_button"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:singleLine="true"
        real:minTextSize="8sp" />

    <com.hardsoftstudio.real.textview.views.RealButton
        android:id="@+id/w_rbut_htmlexample"
        android:text="Real HTML Example"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_button"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:singleLine="true"
        real:minTextSize="8sp" />

</LinearLayout>
